{
    "name": "recruitment-task/plugins",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "extra": {
        "installer-paths": {
            "{$name}/": [
                "type:wordpress-plugin"
            ]
        }
    },
    "require": {
        "composer/installers": "^1.0",
        "wpackagist-plugin/wp-api-swaggerui": "~1.0"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
